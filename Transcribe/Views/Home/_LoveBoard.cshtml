@model List<Transcribe.Models.LeaderBoardViewModel>

@if (Model.Count() > 0)
{
    <table class="table">
        <caption>Leaderboard</caption>
        <tr>
            <th>Transcriber</th>
            <th>Completed</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.userid</td>
                <td>@item.total</td>
            </tr>
        }
    </table>
    <p>View the full <a href="/Leaderboard/Index">leaderboard</a>.</p>
}
else
{
    <p>No transcriptions have been completed</p>
}

