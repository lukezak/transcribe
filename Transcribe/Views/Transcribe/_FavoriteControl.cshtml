@model Transcribe.Models.CorrectionsViewModel

@using (Ajax.BeginForm("Favorite", "Transcribe", new AjaxOptions { UpdateTargetId = "favourite" }, new { role = "form" }))
{
    @Html.AntiForgeryToken();
    <button data-toggle="tooltip" data-placement="top" title="Favourite" type="submit" class="btn btn-default"><span class="glyphicon @Model.favorite"></span></button>
    @Html.HiddenFor(m => m.RecordId)
}
