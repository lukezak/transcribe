@model PagedList.IPagedList<Transcribe.Models.ActivityModels>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Activity";
}
<h2>@ViewBag.Title</h2>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <p><a href="/User/Index/@item.userId">@item.userId</a></p>
        <span class="old-line">@item.oldline</span> <text>updated to </text><span class="new-line">@item.newline</span><br />
        <span class="glyphicon glyphicon-time"></span> @item.commit.ToString("yyyy-MM-dd HH:mm:ss")
        <hr />
    }
}
else
{
    <p>No activity yet.</p>
}
<div class="clearfix"></div>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Activity", new { page }))
